#!/bin/bash
export BINARY=$APACHI_HOME/bin/`uname -sm | tr " " "."`
#export PATH=$APACHI_HOME/bin/$BINARY:$PATH

if [  $# -lt 1 ];then
echo '
	hello, I am APAchi 
	please type "apa list" to see function I can understand 
	or type "apa function_name" to run the function_name
'
exit;
fi

for f in $APACHI_HOME/src/*.sh;do
	. $f;
done


if [ $1 == "list" ];then
	echo ">APAchi functions: "
	declare -F | perl -pne '$_=~s/declare -f /\t/;';
else
	$1 ${@:2};
fi
